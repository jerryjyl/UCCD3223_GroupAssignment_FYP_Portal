<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityAdmin">

    <Button
        android:id="@+id/offeredTitleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offered Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/iipspwStudentListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IIPSPW Student List"
        android:layout_below="@id/offeredTitleButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/fypStudentListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FYP Student List"
        android:layout_below="@id/iipspwStudentListButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
