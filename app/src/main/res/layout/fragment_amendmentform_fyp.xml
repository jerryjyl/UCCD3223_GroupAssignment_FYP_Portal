<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Message -->
    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The form is disabled due to exceed the deadline[2024-03-15 17:00:00]. Please download the softcopy below and submit it to your supervisor VIA e-mail."
        android:textSize="16sp"
        android:padding="16dp"/>

    <!-- Download Form Button -->
    <Button
        android:id="@+id/downloadFormButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Form"
        android:onClick="downloadForm"/>

</LinearLayout>
